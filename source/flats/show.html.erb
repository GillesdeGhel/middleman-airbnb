
<!-- Access data.flats with owner's name as key -->



<% flat = data.flats[owner] %>

<div class="banner-user" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">

<!-- Inject flat data in template -->
</div>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class= "flat">
          <div class= "flat-owner text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
            <p><%= flat.name %></p>
          </div>
          <div class = "flat-description">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <div class="ratings">
              <% flat.rating.to_i.times do %>
              <div class="rating">
                <i class="fas fa-star"></i>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4 col-sm-offset-1" >
        <form action="">
          <h2> Book it now mate</h2>
          <div class="form-group">
            <div class ="row">
              <div class = "col-xs-6">
                <input type="date" name="check-in" class="form-control" placeholder="Check-in">
              </div>
              <div class = "col-xs-6">
                <input type="date" name="check-in" class="form-control" placeholder="Check-out">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="guest" id="" class="form-control" style="width: 100%">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
            <a href="/about.html" class="btn btn-primary" style="width: 100%">Book now</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="wrapper-white">
  <div>
    <div>

    </div>
  </div>
</div>


